// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SPL {
  id                   Int            @id @unique @default(autoincrement())
  Token                String?
  Type                 String?
  From                 String?        @map("From/To")
  Amount               Decimal?       @db.Decimal
  Balance              Decimal?       @db.Decimal
  Created_Date         DateTime?      @map("Created Date")
  Account              String?
  Index                Int?
  Price                Decimal?       @db.Decimal
  inUSD                Decimal?       @db.Decimal
  Buy_or_Sell          String?        @map("Buy/Sell")
  Internal_or_External String?        @map("Internal/External")
  Cumulative_Buy       Decimal?       @db.Decimal
  Prev_Cumulative_Buy  Decimal?       @db.Decimal
  Cumulative_Sell      Decimal?       @db.Decimal
  Prev_Cumulative_Sell Decimal?       @db.Decimal
  accountingJE         AccountingJE[]
}

model Listing_Account {
  id      Int     @id @unique @default(autoincrement())
  Account String?
}

model Listing_Token {
  id    Int     @id @unique @default(autoincrement())
  Token String?
}

model AccountingJE {
  id           Int       @id @unique @default(autoincrement())
  Entity       String?
  Wallet       String?
  Counterparty String?
  Asset        String?
  Proceed_Date DateTime?
  Ledger_Type1 String?
  Ledger_Type2 String?
  Ledger_Name  String?
  Debit        Decimal?  @default(0) @db.Decimal
  Credit       Decimal?  @default(0) @db.Decimal
  CryptoDBid   Int
  Duration     String?
  Notes        String?
  SPL          SPL       @relation(fields: [CryptoDBid], references: [id])
}

model Ledger {
  id               Int      @id @unique @default(autoincrement())
  Transaction_Type String?  @map("Transaction Type")
  Dledger          DLedger?
  DLedger_SType    String?  @default("Liquid")
  Cledger          CLedger?
  CLedger_SType    String?  @default("Deferred Revenue")
  Real             Boolean? @default(false)
  Sale             Sale?
  Notes            String?
}

model History_price_DEC {
  id        Int       @id @unique @default(autoincrement())
  Asset     String?
  Date      DateTime?
  Open      Decimal?  @default(0) @db.Decimal
  High      Decimal?  @default(0) @db.Decimal
  Low       Decimal?  @default(0) @db.Decimal
  Close     Decimal?  @default(0) @db.Decimal
  Adj_Close Decimal?  @default(0) @db.Decimal
  Volume    Decimal?  @default(0) @db.Decimal
}

model History_price_SPS {
  id        Int       @id @unique @default(autoincrement())
  Asset     String?
  Date      DateTime?
  Open      Decimal?  @default(0) @db.Decimal
  High      Decimal?  @default(0) @db.Decimal
  Low       Decimal?  @default(0) @db.Decimal
  Close     Decimal?  @default(0) @db.Decimal
  Adj_Close Decimal?  @default(0) @db.Decimal
  Volume    Decimal?  @default(0) @db.Decimal
}

enum DLedger {
  Asset
  Liability
  Equity
  Revenue
  Expense
}

enum CLedger {
  Asset
  Liability
  Equity
  Revenue
  Expense
}

enum Sale {
  Buy
  Sale
}
